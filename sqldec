CREATE TABLE ventas_crearplato(
Codigo int(11) PRIMARY KEY AUTO_INCREMENT,
    codigo_crearplato int(11),
    ESPECIFICACION1 varchar(50),
    ESPECIFICACION2 varchar(50),
    ESPECIFICACION3 varchar(50),
    ESPECIFICACION4 varchar(50),
    PRECIO int(11)
);


CREATE TABLE ventas_pedidos(
Codigo int(11) PRIMARY KEY AUTO_INCREMENT,
    codigo_pedidos int(11),
    ESPECIFICACION1 varchar(50),
    ESPECIFICACION2 varchar(50),
    ESPECIFICACION3 varchar(50),
    ESPECIFICACION4 varchar(50),
    PRECIO int(11)
);
